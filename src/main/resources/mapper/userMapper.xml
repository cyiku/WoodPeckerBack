<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.woodpecker.dao.UserDao">
<!--设置domain类和数据库中表的字段一一对应，注意数据库字段和domain类中的字段名称一致-->
	<resultMap id="BaseResultMap" type="com.woodpecker.domain.User">
		<result column="id" property="id" jdbcType="INTEGER"/>
		<result column="username" property="username" jdbcType="VARCHAR" />
		<result column="password" property="password" jdbcType="VARCHAR" />
	</resultMap>

	<resultMap id="KeywordMap" type="com.woodpecker.domain.Keyword">
		<result column="keywordid" property="keywordid" jdbcType="INTEGER" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="sites" property="sites" jdbcType="VARCHAR" />
	</resultMap>

	<!-- 建表相关 -->

	<select id="existsTable" parameterType="String" resultType="Integer">
		SHOW TABLES LIKE #{tableName}
	</select>

	<update id="createCollectionWeibo" parameterType="String">
		CREATE TABLE ${_parameter} (
			dataid INTEGER NOT NULL PRIMARY KEY AUTO_INCREMENT,
			data VARCHAR(2047) NOT NULL,
			iscollection INTEGER NOT NULL
		)
	</update>

	<update id="createCollectionTieba" parameterType="String">
		CREATE TABLE ${_parameter} (
		dataid INTEGER NOT NULL PRIMARY KEY AUTO_INCREMENT,
		data VARCHAR(2047) NOT NULL,
		iscollection INTEGER NOT NULL
		)
	</update>

	<update id="createCollectionTable" parameterType="String">
		CREATE TABLE ${_parameter} (
		dataid INTEGER NOT NULL PRIMARY KEY AUTO_INCREMENT,
		data VARCHAR(2047) NOT NULL,
		tableid INTEGER NOT NULL
		)
	</update>

	<update id="createKeyword" parameterType="String">
		CREATE TABLE ${_parameter} (
		keywordid INTEGER NOT NULL PRIMARY KEY AUTO_INCREMENT,
		name VARCHAR(255) NOT NULL,
		sites VARCHAR(255) NOT NULL
		)
	</update>

	<!-- 登录 -->
	<select id="getUser"  resultMap="BaseResultMap">
		SELECT * FROM user_t WHERE username = #{username} AND password = #{password}
	</select>

	<!-- keyword相关 -->
	<select id="getKeyword"  resultMap="KeywordMap">
		SELECT * FROM ${tableName}
	</select>

	<insert id="addKeyword" >
		INSERT INTO ${tableName}(name,sites) VALUES("${keyword.name}", "${keyword.sites}")
	</insert>

	<select id="searchKeyword" resultMap="KeywordMap">
		SELECT * FROM ${tableName} WHERE name = "${keyword.name}"
	</select>

	<delete id="delKeyword" >
		DELETE FROM ${tableName} WHERE name = "${keyword.name}"
	</delete>

	<update id="updateKeyword" >
		UPDATE ${tableName} SET name = "${keyword.name}", sites = "${keyword.sites}"
		WHERE keywordid = ${keyword.keywordid}
	</update>

</mapper>